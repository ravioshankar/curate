{
  "expo": {
    "name": "Curate",
    "slug": "curate",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "curate",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.curate.lifestyle",
      "backgroundColor": "#B91C1C",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take photos of collection items.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select photos of collection items."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#B91C1C"
      },
      "package": "com.curate.collection",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "themeColor": "#B91C1C"
    },
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#B91C1C"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#B91C1C"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select images for your collection items.",
          "cameraPermission": "The app accesses your camera to let you take photos of your collection items."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}